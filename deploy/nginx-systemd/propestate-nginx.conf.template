# nginx site config template for PropEstateAI
# Replace server_name and paths before enabling
server {
  listen 80;
  server_name YOUR_DOMAIN_OR_IP;

  access_log /var/log/nginx/propestate_access.log;
  error_log /var/log/nginx/propestate_error.log;

  # Serve the web frontend at root
  root /var/www/propestate/web;
  index index.html index.htm;

  location /api/ {
    proxy_pass http://127.0.0.1:8000/;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
  }

  location / {
    try_files $uri $uri/ /index.html;
  }

  # Optional mobile frontend under /mobile
  location /mobile/ {
    alias /var/www/propestate/mobile/;
    try_files $uri $uri/ /mobile/index.html;
  }
}
